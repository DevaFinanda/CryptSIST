# ========================================
# üì∞ NEWS & SENTIMENT APIs
# ========================================

# News API Key (untuk sentiment analysis)
# Dapatkan gratis di: https://newsapi.org/
# Digunakan untuk: Real-time crypto news sentiment
NEWS_API_KEY=your_news_api_key_here

# Polygon.io API Key (untuk market data premium)
# Dapatkan gratis di: https://polygon.io/
# Digunakan untuk: Real-time crypto/forex data
POLYGON_API_KEY=your_polygon_api_key_here

# ========================================
# ‚ö° REAL-TIME DATA APIs
# ========================================

# Binance API Keys (untuk real-time crypto data)
# Dapatkan gratis di: https://www.binance.com/en/binance-api
# Digunakan untuk: Real-time price feeds, volume data
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# CoinGecko Pro API Key (opsional - untuk rate limit tinggi)
# Dapatkan di: https://www.coingecko.com/en/api/pricing
# Digunakan untuk: Enhanced rate limits, priority access
COINGECKO_API_KEY=your_coingecko_api_key_here

# ========================================
# üõ°Ô∏è MT5 TRADING CONFIGURATION
# ========================================

# MT5 Account Configuration (untuk demo/live trading)
MT5_LOGIN=your_mt5_login_here
MT5_PASSWORD=your_mt5_password_here
MT5_SERVER=your_mt5_server_here

# MT5 Trading Settings
MT5_MAGIC_NUMBER=123456
MT5_DEFAULT_LOT_SIZE=0.01
MT5_MAX_RISK_PERCENT=2.0

# ========================================
# üì° SERVER CONFIGURATION
# ========================================

# CryptSIST Server Settings
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
DEBUG_MODE=false

# MT5 Bridge Settings
MT5_BRIDGE_INTERVAL=500
MT5_SIGNAL_CONFIDENCE_MIN=0.75
MT5_MAX_DAILY_TRADES=15

# ========================================
# üì± NOTIFICATION SETTINGS
